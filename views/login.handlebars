<div class="login">
  <div class="container">
    <div class="col">
      <h1 class="logo adminLogo">
        <span id="logoLetters">BABALO</span>
        shoes
      </h1>
    </div>
    <div class="errMsg">
      <p class="err">{{messages.info}}</p>
    </div>
    <form class="loginForm" action="/login" method="post">
      <div class="input-group">
        <span class="input-group-text describe">Username</span>
        <input
          type="text"
          name="username"
          aria-label="First name"
          class="form-control"
          autocomplete="off"
        />
      </div>
      <div class="input-group">
        <span class="input-group-text describe">Password</span>
        <input
          type="text"
          name="password"
          aria-label="First name"
          class="form-control"
          autocomplete="off"
        />
      </div>
      <div class="d-grid gap-2 col-6 mx-auto">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
</div>

